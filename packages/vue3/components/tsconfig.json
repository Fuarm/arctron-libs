{
  "compilerOptions": {
    /* 基础配置 */
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "removeComments": false,
    "declaration": true,
    "sourceMap": false,
    
		"jsx": "preserve",

    /* 强类型检查配置 */
    "strict": true,
    "noImplicitAny": false,

    /* 模块分析配置 */
    "typeRoots": [],
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["packages", "src"],
  "exclude": ["lib", "node_modules"]
}